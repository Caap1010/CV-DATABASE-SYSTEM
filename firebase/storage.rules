rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow uploads only for authenticated users to the 'resumes' folder.
    match /resumes/{allPaths=**} {
      allow read: if true; // public read; change to restrict if needed
      allow write: if request.auth != null;
    }

    // Deny other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
